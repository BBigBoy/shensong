<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical"
    tools:context="com.fuyang.shensong.QualityListFilterFragment">

    <include
        android:id="@+id/top_title"
        layout="@layout/top_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:divider="@drawable/line_divider_horizontal"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="起始时间"
                android:textColor="#666666"
                android:textSize="16sp" />

            <EditText
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/apptheme_edit_text_holo_light"
                android:cursorVisible="true"
                android:gravity="center"
                android:inputType="number"
                android:text="2015"
                android:textColor="#3D3D3D"
                android:textColorHint="#A3B1CA"
                android:textCursorDrawable="@color/main"
                android:textSize="18sp"
                android:id="@+id/start_year" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="年"
                android:textColor="#666666"
                android:textSize="16sp" />

            <EditText
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:background="@drawable/apptheme_edit_text_holo_light"
                android:cursorVisible="true"
                android:gravity="center"
                android:inputType="number"
                android:text="01"
                android:textColor="#3D3D3D"
                android:textColorHint="#A3B1CA"
                android:textCursorDrawable="@color/main"
                android:textSize="18sp"
                android:id="@+id/start_month" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="月"
                android:textColor="#666666"
                android:textSize="16sp" />

            <EditText
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:background="@drawable/apptheme_edit_text_holo_light"
                android:cursorVisible="true"
                android:gravity="center"
                android:inputType="number"
                android:text="01"
                android:textColor="#3D3D3D"
                android:textColorHint="#A3B1CA"
                android:textCursorDrawable="@color/main"
                android:textSize="18sp"
                android:id="@+id/start_day" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="日"
                android:textColor="#666666"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="截止时间"
                android:textColor="#666666"
                android:textSize="16sp" />

            <EditText
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/apptheme_edit_text_holo_light"
                android:cursorVisible="true"
                android:gravity="center"
                android:inputType="number"
                android:text="2015"
                android:textColor="#3D3D3D"
                android:textColorHint="#A3B1CA"
                android:textCursorDrawable="@color/main"
                android:textSize="18sp"
                android:id="@+id/end_year" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="年"
                android:textColor="#666666"
                android:textSize="16sp" />

            <EditText
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:background="@drawable/apptheme_edit_text_holo_light"
                android:cursorVisible="true"
                android:gravity="center"
                android:inputType="number"
                android:text="01"
                android:textColor="#3D3D3D"
                android:textColorHint="#A3B1CA"
                android:textCursorDrawable="@color/main"
                android:textSize="18sp"
                android:id="@+id/end_month" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="月"
                android:textColor="#666666"
                android:textSize="16sp" />

            <EditText
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:background="@drawable/apptheme_edit_text_holo_light"
                android:cursorVisible="true"
                android:gravity="center"
                android:inputType="number"
                android:text="01"
                android:textColor="#3D3D3D"
                android:textColorHint="#A3B1CA"
                android:textCursorDrawable="@color/main"
                android:textSize="18sp"
                android:id="@+id/end_day" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="日"
                android:textColor="#666666"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:text="市级位置"
                android:textColor="#666666"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/city_spinner"
                style="@style/SpinnerAppTheme"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/normal_padding"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:text="县级位置"
                android:textColor="#666666"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/country_spinner"
                style="@style/SpinnerAppTheme"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/normal_padding"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:text="乡镇位置"
                android:textColor="#666666"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/town_spinner"
                style="@style/SpinnerAppTheme"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/normal_padding"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="22dp"
            android:background="@drawable/btn_main"
            android:padding="10dp"
            android:text="@string/area_filter"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>